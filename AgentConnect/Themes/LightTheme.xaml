<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="HeaderBorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#666666"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#E0E0E0"/>

</ResourceDictionary>
