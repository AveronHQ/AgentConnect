<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="HeaderBorderBrush" Color="#3D3D3D"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#AAAAAA"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#3D3D3D"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#3D3D3D"/>

</ResourceDictionary>
