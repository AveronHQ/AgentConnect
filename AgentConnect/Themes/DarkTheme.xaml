<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================== -->
    <!-- DARK THEME - Enterprise Design System         -->
    <!-- ============================================== -->

    <!-- Core Backgrounds -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#0D1117"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="HeaderBorderBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="OverlayBackgroundBrush" Color="#00000066"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#E6EDF3"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#8B949E"/>
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#6E7681"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#484F58"/>
    <SolidColorBrush x:Key="InverseTextBrush" Color="#0D1117"/>
    <SolidColorBrush x:Key="LinkTextBrush" Color="#58A6FF"/>

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#58A6FF"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#79B8FF"/>
    <SolidColorBrush x:Key="AccentActiveBrush" Color="#388BFD"/>
    <SolidColorBrush x:Key="AccentSubtleBrush" Color="#388BFD26"/>
    <SolidColorBrush x:Key="AccentMutedBrush" Color="#1F6FEB"/>

    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#3FB950"/>
    <SolidColorBrush x:Key="SuccessSubtleBrush" Color="#238636"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#D29922"/>
    <SolidColorBrush x:Key="WarningSubtleBrush" Color="#9E6A03"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#F85149"/>
    <SolidColorBrush x:Key="DangerSubtleBrush" Color="#DA3633"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#58A6FF"/>
    <SolidColorBrush x:Key="InfoSubtleBrush" Color="#388BFD26"/>

    <!-- Interactive States -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="ButtonActiveBrush" Color="#484F58"/>
    <SolidColorBrush x:Key="ButtonSelectedBrush" Color="#388BFD26"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#0D1117"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="InputFocusBorderBrush" Color="#58A6FF"/>
    <SolidColorBrush x:Key="InputPlaceholderBrush" Color="#6E7681"/>

    <!-- Dividers & Borders -->
    <SolidColorBrush x:Key="DividerBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="BorderMutedBrush" Color="#484F58"/>

    <!-- Avatar & Presence -->
    <SolidColorBrush x:Key="AvatarBorderBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="PresenceOnlineBrush" Color="#3FB950"/>
    <SolidColorBrush x:Key="PresenceAwayBrush" Color="#D29922"/>
    <SolidColorBrush x:Key="PresenceBusyBrush" Color="#F85149"/>
    <SolidColorBrush x:Key="PresenceOfflineBrush" Color="#6E7681"/>

    <!-- Badge Colors -->
    <SolidColorBrush x:Key="BadgeBackgroundBrush" Color="#F85149"/>
    <SolidColorBrush x:Key="BadgeTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BadgeSecondaryBrush" Color="#6E7681"/>
    <SolidColorBrush x:Key="BadgeSecondaryTextBrush" Color="#E6EDF3"/>

    <!-- Dropdown & Menu -->
    <SolidColorBrush x:Key="DropdownBackgroundBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="DropdownBorderBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="DropdownShadowBrush" Color="#0000004D"/>
    <SolidColorBrush x:Key="MenuItemHoverBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="MenuItemActiveBrush" Color="#30363D"/>

    <!-- Tooltip -->
    <SolidColorBrush x:Key="TooltipBackgroundBrush" Color="#6E7681"/>
    <SolidColorBrush x:Key="TooltipTextBrush" Color="#FFFFFF"/>

    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollbarTrackBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="ScrollbarThumbBrush" Color="#484F58"/>
    <SolidColorBrush x:Key="ScrollbarThumbHoverBrush" Color="#6E7681"/>

    <!-- Shadows (as colors for DropShadowEffect) -->
    <Color x:Key="ShadowColor">#000000</Color>
    <sys:Double x:Key="ShadowOpacity" xmlns:sys="clr-namespace:System;assembly=mscorlib">0.4</sys:Double>

    <!-- Gradients -->
    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#58A6FF" Offset="0"/>
        <GradientStop Color="#1F6FEB" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeaderGlowBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#58A6FF00" Offset="0"/>
        <GradientStop Color="#58A6FF15" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
