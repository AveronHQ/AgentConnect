<Window x:Class="AgentConnect.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AgentConnect"
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="True">

    <Border CornerRadius="12" Background="White" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.25" Color="#000000"/>
        </Border.Effect>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo -->
            <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,24">
                <Ellipse Width="80" Height="80">
                    <Ellipse.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#0078D4" Offset="0"/>
                            <GradientStop Color="#00B4FF" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Text="A" FontSize="36" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- App Name and Tagline -->
            <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock Text="AgentConnect" FontSize="28" FontWeight="SemiBold"
                           Foreground="#1A1A1A" HorizontalAlignment="Center"/>
                <TextBlock Text="Seamless connectivity, everywhere" FontSize="13"
                           Foreground="#888888" HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Status Panel -->
            <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="8" Padding="20,16" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Internet -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <Ellipse x:Name="InternetIndicator" Width="12" Height="12"
                                 Fill="#E0E0E0" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBlock Text="Internet" FontSize="12" FontWeight="SemiBold"
                                   Foreground="#444444" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="InternetStatusText" Text="Checking..." FontSize="11"
                                   Foreground="#888888" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Divider -->
                    <Border Grid.Column="1" Width="1" Background="#E0E0E0" Margin="16,0"/>

                    <!-- Intranet -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <Ellipse x:Name="IntranetIndicator" Width="12" Height="12"
                                 Fill="#E0E0E0" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBlock Text="Intranet" FontSize="12" FontWeight="SemiBold"
                                   Foreground="#444444" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="IntranetStatusText" Text="Checking..." FontSize="11"
                                   Foreground="#888888" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Loading / Version -->
            <StackPanel Grid.Row="3" HorizontalAlignment="Center">
                <TextBlock x:Name="LoadingText" Text="Checking network..." FontSize="12"
                           Foreground="#888888" HorizontalAlignment="Center"/>
                <TextBlock x:Name="VersionText" Text="Version 1.0.0" FontSize="10"
                           Foreground="#BBBBBB" HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
