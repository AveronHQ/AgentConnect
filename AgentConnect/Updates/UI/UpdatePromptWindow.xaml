<Window x:Class="AgentConnect.Updates.UI.UpdatePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available"
        Height="400" Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Topmost="True"
        Background="#F5F5F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock FontSize="20" FontWeight="SemiBold" Foreground="#1A1A1A"
                       Text="A new version is available"/>
            <TextBlock FontSize="13" Foreground="#666666" Margin="0,4,0,0"
                       Text="{Binding UpdateTypeDescription}"/>
        </StackPanel>

        <!-- Version Info -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="16" Margin="0,0,0,16"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Current Version" FontSize="11" Foreground="#888888"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentVersion}" FontSize="16" FontWeight="SemiBold"
                               HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="&#x2192;" FontSize="20" Foreground="#888888"
                           VerticalAlignment="Center" Margin="16,0"/>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="New Version" FontSize="11" Foreground="#888888"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding NewVersion}" FontSize="16" FontWeight="SemiBold"
                               Foreground="#0078D4" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Release Notes -->
        <Border Grid.Row="2" Background="White" CornerRadius="6" Padding="16"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="What's New" FontWeight="SemiBold"
                           FontSize="13" Margin="0,0,0,8"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding ReleaseNotes}" TextWrapping="Wrap"
                               FontSize="13" Foreground="#444444"/>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Deferral Info -->
        <StackPanel Grid.Row="3" Margin="0,12,0,0"
                    Visibility="{Binding ShowDeferralInfo, Converter={StaticResource BoolToVisibility}}">
            <TextBlock FontSize="12" Foreground="#888888">
                <Run Text="Deferrals remaining: "/>
                <Run Text="{Binding DeferralsRemaining, Mode=OneWay}" FontWeight="SemiBold"/>
            </TextBlock>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="DeferButton"
                    Content="Remind Me Later"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,0,12,0"
                    Visibility="{Binding CanDefer, Converter={StaticResource BoolToVisibility}}"
                    Click="DeferButton_Click"/>

            <Button x:Name="InstallButton"
                    Content="Install Now"
                    Style="{StaticResource PrimaryButton}"
                    IsDefault="True"
                    Click="InstallButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
